<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane
        prefWidth="600" prefHeight="600"
        vgap="10" hgap="10" alignment="CENTER" orientation="VERTICAL"
        xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.clientgameapp.userUI.RegistrationController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="Registration form"/>

    <TextField fx:id="textFieldEmail" promptText="Email"/>
    <TextField fx:id="textFieldNickName" promptText="Nickname"/>
    <TextField fx:id="textFieldPassword" promptText="Password"/>

    <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="150.0" text="Register" onAction="#registerUser"/>


    <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="150.0" text="Login" onAction="#openLoginScene"/>

</FlowPane>
