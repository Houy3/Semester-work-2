<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<FlowPane hgap="10" vgap="10" alignment="CENTER" orientation="VERTICAL" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clientgameapp.lobbyUI.RoomCreationController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Slider fx:id="sliderPlayerCount" blockIncrement="1" majorTickUnit="1" max="4" min="2" minorTickCount="1" showTickLabels="true" showTickMarks="true" />

    <ToggleSwitch fx:id="togglePrivate" text="Private" />

    <TextField fx:id="textFieldCitiesAmount" promptText="Amount of cities"/>
    <TextField fx:id="textFieldArmySpeed" promptText="Speed of army"/>
    <TextField fx:id="textFieldArmyGrowthRate" promptText="Army growth rate"/>


    <Button mnemonicParsing="false" onAction="#createRoom" prefHeight="26.0" prefWidth="151.0" text="Register" />


</FlowPane>
