<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import com.example.clientgameapp.util.RoomCellFactory?>
<BorderPane
        minHeight="600"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.example.clientgameapp.lobbyUI.RoomLobbyController"
>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <stylesheets>
        <URL value="@styles/main.css"/>
    </stylesheets>

    <right>
        <VBox styleClass="rightMenuBox" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button styleClass="nav-btn" text="Create room" onAction="#navigateRoomCreation"/>
            <Button styleClass="nav-btn" text="Find room" onAction="#navigateRoomList"/>
        </VBox>
    </right>
    <center>
        <VBox>
            <Label text="Choose a room"/>
            <ListView fx:id="roomsList"/>
            <HBox>
                <Button styleClass="gameStartBtn" text="Connect" onAction="#connectToRoom"/>
                <ColorPicker fx:id="gameColorPicker" onAction="#getColor" styleClass="color-picker"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
