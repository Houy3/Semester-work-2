<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<BorderPane
        minHeight="600"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.example.clientgameapp.lobbyUI.RoomLobbyController"
        >
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <stylesheets>
        <URL value="@styles/main.css"/>
    </stylesheets>

    <right>
        <VBox styleClass="rightMenuBox" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button styleClass="navBtn" text="Create room" onAction="#navigateRoomCreation" />
            <Button styleClass="navBtn" text="Find room" onAction="#navigateRoomList"/>
        </VBox>
    </right>
    <center>
        <FlowPane maxWidth="300" orientation="VERTICAL" vgap="10" hgap="10">
            <Label text="Choose a room"/>
            <ListView fx:id="roomsList">

            </ListView>
            <Button styleClass="gameStartBtn" text="Connect" onAction="#connectToRoom"/>
        </FlowPane>
    </center>

</BorderPane>
